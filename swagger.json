{
  "swagger": "2.0",
  "info": {
    "description": "This is a Search API",
    "version": "0.0.1",
    "title": "Name search API"
  },
  "basePath": "/api/v1",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Log in",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "User credentials",
            "description": "Username and password for the user you wish to log in to",
            "schema": {
              "$ref": "#/definitions/LoginRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          }
        },
        "schema": {
          "$ref": "#/definitions/Jwt"
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Register",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "User credentials",
            "description": "Username and password for the newly created user",
            "schema": {
              "$ref": "#/definitions/LoginRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          }
        },
        "schema": {
          "$ref": "#/definitions/Jwt"
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Log out",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "success"
          }
        }
      }
    },
    "/names": {
      "get": {
        "tags": [
          "names"
        ],
        "security": [
          {
            "Bearer": [

            ]
          }
        ],
        "summary": "Get Names",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "search",
            "schema": {
              "type": "string"
            },
            "description": "Search term to find names that begin with the supplied input"
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          }
        },
        "schema": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Name"
          }
        }
      }
    }
  },
  "definitions": {
    "Name": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "LoginRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Jwt": {
      "type": "object",
      "properties": {
        "jwt": {
          "type": "string"
        }
      }
    }
  }
}